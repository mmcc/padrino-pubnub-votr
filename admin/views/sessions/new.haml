!!! Strict
%html{:lang => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}
    %title Votr Admin
    = stylesheet_link_tag :admin
  %body
    #container
      #box.login
        %h1 Votr Admin
        .content
          .flash= [:error, :warning, :notice].map { |type| flash_tag(type, :class => "message #{type}") }.join
          - form_tag(url(:sessions, :create), :class => 'form login') do
            %label.hidden Login
            = text_field_tag :email, :value => params[:email], :class => :text_field, :placeholder => "email"
            %label.hidden Password
            = password_field_tag :password, :value => params[:password], :class => :text_field, :placeholder => "password"
            %br/
            - if Padrino.env == :development
              %label.label.right Bypass login?
              = check_box_tag :bypass
              %br/
            = submit_tag('Sign In', :class => :button)